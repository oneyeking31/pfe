<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primarTextColor"
        app:title="Add account "
        app:titleTextColor="@color/whiteTextColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <EditText
                android:id="@+id/name_feild_singup"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter full name"
                android:padding="15dp"
                android:textColorHint="@color/colorblo"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/eamil" />

            <EditText
                android:id="@+id/email_feild_singup"
                style="@style/Widget.AppCompat.EditText"
                android:layout_height="wrap_content"
                android:layout_width="310dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter Email"
                android:padding="15dp"
                android:textColorHint="@color/colorblo"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/password" />

            <EditText
                android:id="@+id/password_field_singup"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_width="310dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter Password"
                android:padding="15dp"
                android:textColorHint="@color/colorblo"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="40dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_local_phone_black_24dp" />

            <EditText
                android:id="@+id/phone_field_singup"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbackground"
                android:hint="Enter phone number"
                android:padding="15dp"
                android:textColorHint="@color/colorblo"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/radiobutton_Adminstrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adminstrator"
            android:textSize="20dp"
            android:buttonTint="@color/primarTextColor"

            />

        <RadioButton
            android:id="@+id/radibutton_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:buttonTint="@color/primarTextColor"
            android:text="Proffesor" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/responsablecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/responsabale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsable"
            android:textSize="20dp"
            android:buttonTint="@color/primarTextColor"

            />

        <RadioButton
            android:id="@+id/no_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:buttonTint="@color/primarTextColor"
            android:text="Non responsable" />
    </RadioGroup>


    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/primarTextColor"
        android:text="SIng up"
        android:onClick="singed"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/whiteTextColor"
        android:textSize="21dp"
        android:textStyle="bold"/>


















</LinearLayout>